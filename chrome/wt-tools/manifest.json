{
  "manifest_version": 2,
  "name": "WikiTree Tools",
  "description": "This extension add useful tools while working on WikiTree.",
  "version": "0.0.2",
    "icons": { "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
  "permissions": [
    "http://*.wikitree.com/"
  ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "WikiTree Tools"
  },

    "content_scripts": [
        {
            "matches": ["http://*.wikitree.com/wiki/*"],
            "js": ["jquery-2.0.3.min.js","content.js"],
            "css": ["content.css"]
        }
    ]
}